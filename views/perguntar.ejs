<%- include("partials/header.ejs") %>

<body>
    <%- include("partials/navbars.ejs") %>
    <div class="wrapper">
        <div class="container" id="formulario-pergunta">
            <div class="card">
                <div class="card-header">
                    <h3>Realizar pergunta</h3>
                </div>
                <div class="card-body">
                    <% if (errorMessage) { %>
                        <div class="alert alert-danger">
                            <%= errorMessage %>
                        </div>
                    <% } %>
                    <form method="post" action="/salvarpergunta">
                        <label>Título</label>
                        <input type="text" class="form-control" placeholder="Título" name="titulo">
                        <br>
                        <label>Descrição</label>
                        <textarea placeholder="Descreva sua pergunta aqui!" class="form-control" name="descricao" id="pergunta"></textarea>
                        <br>
                        <button class="btn btn-primary">Perguntar</button>
                    </form>
                </div>
            </div>  
        </div>
        <br><%- include("partials/footer2.ejs")%>
    </div>
    
</body>
<%- include("partials/footer.ejs") %>

<script src="/tinymce/tinymce.min.js"></script>
<script>
    tinymce.init({
        language: "pt_BR",
        selector: "#pergunta",
        forced_root_block: false, // Desabilita a inserção automática de tags <p>
        plugins:[
        "preview",
        "advlist",
        "autolink",
        "link",
        "image",
        "lists",
        "print",
        "hr",
        "searchreplace",
        "wordcount",
        "fullscreen",
        "insertdatetime",
        "media",
        "save",
        "table",
        "paste",
        "emoticons",
        "code",   
        ]
    });
</script>

<%- include("partials/header.ejs") %>

<body>
    <%- include("partials/navbars.ejs") %>
    <div class="wrapper">
        <div class="container" id="formulario-pergunta">
            <div class="card">
                <div class="card-header">
                    <h3>Realizar pergunta</h3>
                </div>
                <div class="card-body">
                    <% if (errorMessage) { %>
                        <div class="alert alert-danger">
                            <%= errorMessage %>
                        </div>
                    <% } %>
                    <form method="post" action="/salvarpergunta">
                        <label>Título</label>
                        <input type="text" class="form-control" placeholder="Título" name="titulo">
                        <br>
                        <label>Descrição</label>
                        <textarea placeholder="Descreva sua pergunta aqui!" class="form-control" name="descricao"></textarea>
                        <br>
                        <button class="btn btn-primary">Perguntar</button>
                    </form>
                </div>
            </div>  
        </div>
        <%- include("partials/footer2.ejs")%>
    </div>
    
</body>
<%- include("partials/footer.ejs") %>